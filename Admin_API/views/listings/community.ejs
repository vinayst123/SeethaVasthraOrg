<% layout("/layouts/boilerplate") %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/community.css">
<link rel="javascript" href="/js/community.js">
 <!-- Header -->


<!-- Breadcrumb -->
<div class="container mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb custom-breadcrumb">
            <li class="breadcrumb-item">
                <a href="#" class="text-primary">Home</a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">Community</li>
        </ol>
    </nav>
</div>

<!-- Main Content -->
<!-- Section 1: Community Header -->
<section class="community-header">
    <!-- Left Content -->
    <div class="community-text">
        <h2 class="display-4 fw-bold">The Most Active Community of Traders & Investors</h2>
        <p class="lead mb-4">Join now to interact with thousands of active traders and investors to learn and share
            your knowledge on our buzzing forum.</p>
        <a href="#" class="btn btn-primary btn-lg">Join Our Community</a>
    </div>

    <!-- Right Image -->
    <div class="community-image">
        <img src="/other images/community_ride.png" alt="Chat Cards" class="img-fluid">
    </div>
</section>

<!-- Section 2: Features -->
<section class="trading-club mt-5">
    <!-- Left Text Content -->
    <div class="text-content">
        <h3 class="h4 fw-bold">be a part of trading & investments club</h3>
        <ul>
            <li><span>✔️</span> rich environment for knowledge exchange.</li>
            <li><span>✔️</span> stay connected about the latest stock market.</li>
            <li><span>✔️</span> access exclusive community events, webinars, and meet-ups.</li>
        </ul>
    </div>

    <!-- Right Cards Content -->
    <div class="cards">
        <div class="card">
            <h4>Dynamic Discussions</h4>
            <p>Engage in meaningful discussions about the stock market.</p>
        </div>
        <div class="card">
            <h4>Expert Insights</h4>
            <p>Gain access to valuable insights from trading experts.</p>
        </div>
        <div class="card">
            <h4>Real-Time Interaction</h4>
            <p>Connect with traders and investors in real time.</p>
        </div>
    </div>
</section>

<!-- Section 3: Team Bluestock -->
<section class="team-bluestock">
    <!-- Section Title -->
    <h3>Team Bluestock Cares</h3>
    <p>Interact with our members to engage, clarify and contribute</p>

    <!-- Content: Left Text and Right Image -->
    <div class="team-content">
        <!-- Left Text -->
        <div class="team-text">
            <h4>Interact With Our Experts</h4>
            <ul>
                <li><span>⚪</span> Get valid suggestions</li>
                <li><span>⚪</span> Raise issues or concerns</li>
                <li><span>⚪</span> Ask your questions</li>
            </ul>
        </div>

        <!-- Right Image -->
        <div class="team-image">
            <img src="/other images/community_down_right.png" alt="Expert Interaction">
        </div>
    </div>
</section>

<%- include("../includes/footer.ejs") %>
</main>